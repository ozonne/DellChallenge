@model IEnumerable<DellChallenge.D2.Web.Models.ProductModel>

@{
    ViewData["Title"] = "View";
}
<h4>All Products</h4>
<hr />

<div class="row">
    <div class="control-label col-md-4">
        Id
    </div>
    <div class="col-md-1">

    </div>
    <div>
        Name
    </div>
    <div class="col-md-1">

    </div>
    <div>
        Category
    </div>
    <div class="col-md-2">

    </div>
    <p class="col-md-2">
        Action
    </p>
</div>
@foreach (var item in Model)
{
<div class="row">
    <div class="control-label col-md-4">
        @item.Id
    </div>
    <div class="col-md-1">

    </div>
    <div>
        @item.Name
    </div>
    <div class="col-md-1">

    </div>
    <div>
        @item.Category
    </div>
    <div class="col-md-2">

    </div>
    <p class="col-md-2">
        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </p>
</div>
}